<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.
chan move, continue_drive;
urgent chan truckEntry, truckExit, create_safe_distance, nominal_distance;
//var used in communication

int nominalDistance =  10;
bool masterBrake = true;
bool vehicleDetected = false;</declaration>
	<template>
		<name>highwayCommunication</name>
		<declaration>clock x,y;</declaration>
		<location id="id0" x="-705" y="-348">
			<name x="-730" y="-339">driveLane</name>
			<label kind="testcodeEnter">nominalDistance = 10</label>
		</location>
		<location id="id1" x="-535" y="-195">
			<name x="-569" y="-186">decoupleTruck</name>
		</location>
		<location id="id2" x="-535" y="-348">
			<name x="-560" y="-340">drive</name>
		</location>
		<location id="id3" x="-535" y="-85">
			<name x="-594" y="-77">entryVehicle</name>
		</location>
		<location id="id4" x="-297" y="-348">
			<name x="-280" y="-348">exitVehicle</name>
		</location>
		<location id="id5" x="-289" y="-85">
			<name x="-340" y="-51">coupleTruck</name>
		</location>
		<init ref="id0"/>
		<transition>
			<source ref="id4"/>
			<target ref="id2"/>
			<label kind="assignment" x="-484" y="-365">masterBrake = true</label>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="-293" y="-233">nominal_distance?</label>
			<label kind="assignment" x="-293" y="-216">nominalDistance = 10</label>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id5"/>
			<label kind="guard" x="-476" y="-144">vehicleDetected == false</label>
			<label kind="synchronisation" x="-459" y="-127">truckExit?</label>
			<label kind="assignment" x="-459" y="-110">nominalDistance--</label>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id2"/>
			<label kind="guard" x="-551" y="-459">masterBrake == true</label>
			<label kind="synchronisation" x="-551" y="-442">continue_drive?</label>
			<label kind="assignment" x="-551" y="-425">masterBrake = false</label>
			<nail x="-492" y="-425"/>
			<nail x="-569" y="-425"/>
			<nail x="-552" y="-382"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="-680" y="-153">create_safe_distance?</label>
			<label kind="assignment" x="-680" y="-136">nominalDistance = 20</label>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="guard" x="-663" y="-280">masterBrake == false</label>
			<label kind="synchronisation" x="-663" y="-297">truckEntry?</label>
			<label kind="assignment" x="-672" y="-263">nominalDistance++</label>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="-637" y="-365">move?</label>
			<label kind="assignment" x="-629" y="-348">x:=0</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Truck</name>
		<declaration>// Place local declarations here.
clock detect;</declaration>
		<location id="id6" x="-603" y="-119">
			<name x="-637" y="-102">startTrip</name>
		</location>
		<location id="id7" x="-297" y="-119">
			<name x="-314" y="-110">laneDrive</name>
		</location>
		<location id="id8" x="-297" y="102">
			<name x="-339" y="111">decoupleTruck</name>
		</location>
		<location id="id9" x="-34" y="-76">
			<name x="-34" y="-68">vehicleEntry</name>
		</location>
		<location id="id10" x="-510" y="76">
			<name x="-536" y="93">VehicleExit</name>
		</location>
		<location id="id11" x="-25" y="76">
			<name x="-25" y="85">coupleTruck</name>
		</location>
		<init ref="id6"/>
		<transition>
			<source ref="id11"/>
			<target ref="id10"/>
			<nail x="-25" y="153"/>
			<nail x="-510" y="144"/>
		</transition>
		<transition>
			<source ref="id9"/>
			<target ref="id11"/>
			<label kind="synchronisation" x="-25" y="0">truckExit!</label>
		</transition>
		<transition>
			<source ref="id10"/>
			<target ref="id7"/>
			<label kind="synchronisation" x="-535" y="17">nominal_distance!</label>
		</transition>
		<transition>
			<source ref="id8"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="-238" y="0">create_safe_distance!</label>
		</transition>
		<transition>
			<source ref="id7"/>
			<target ref="id7"/>
			<label kind="synchronisation" x="-348" y="-255">continue_drive!</label>
			<nail x="-246" y="-229"/>
			<nail x="-356" y="-229"/>
		</transition>
		<transition>
			<source ref="id6"/>
			<target ref="id7"/>
			<label kind="synchronisation" x="-518" y="-136">move!</label>
		</transition>
		<transition>
			<source ref="id7"/>
			<target ref="id8"/>
			<label kind="synchronisation" x="-357" y="-34">truckEntry!</label>
		</transition>
	</template>
	<system>// Place template instantiations here.

leadTruck = Truck();
autoTruck1 = Truck();
autoTruck2 = Truck();
autoTruck3 = Truck();

objectDetection = highwayCommunication();
truckOne = highwayCommunication();
truckTwo = highwayCommunication();
truckThree = highwayCommunication();
// List one or more processes to be composed into a system.
system leadTruck, autoTruck1, objectDetection;</system>
	<queries>
		<query>
			<formula></formula>
			<comment></comment>
		</query>
		<query>
			<formula></formula>
			<comment></comment>
		</query>
		<query>
			<formula>A[] (leadTruck.coupleTruck &amp;&amp; objectDetection.drive)</formula>
			<comment></comment>
		</query>
	</queries>
</nta>
